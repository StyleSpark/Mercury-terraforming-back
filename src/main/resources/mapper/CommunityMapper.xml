<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.matdongsan.api.mapper.CommunityMapper">

    <select id="getCommunityById" parameterType="long" resultType="community">
        SELECT id
        ,user_id
        ,category_id
        ,title
        ,content
        ,image_urls
        ,view_count
        ,created_at
        FROM communities
        WHERE id = #{id}
        ORDER BY created_at
    </select>

</mapper>
